<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProgrammering2.Essentials">
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding Link}"/>
            <Button Text="Open in browser" Clicked="OpenBrowser"/>
            <Label Text="{Binding ChargeText}"/>
            <Label Text="{Binding Charging}"/>
            <Button Text="Update Data" Clicked="UpdateData"/>
            <Button Text="Insert file" Clicked="GetPicture"/>
            <Image Source="{Binding ImagePath}"/>
            <Entry Text="{Binding SMS}"/>
            <Button Text="Send SMS" Clicked="SendSMS"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>